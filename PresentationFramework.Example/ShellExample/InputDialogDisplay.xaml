<UserControl x:Class="WpfExampleApplication.PresentationFramework.Example.ShellExample.InputDialogDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shellExample="clr-namespace:WpfExampleApplication.PresentationFramework.Example.ShellExample"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=shellExample:InputDialogDisplayViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap">Enter what you want to have written on your screen</TextBlock>
            <TextBox Text="{Binding Input}"/>
        </StackPanel>
    </Grid>
</UserControl>
